# API Keys (Required for full functionality)
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8080
DEBUG=false

# Database URLs (Optional - will use mock connections if not available)
REDIS_URL=redis://localhost:6379
POSTGRES_URL=postgresql://user:password@localhost:5432/customer_service_db
MONGODB_URL=mongodb://localhost:27017/customer_service_db

# Agent Configuration
DEFAULT_AGENT_MODEL=gemini-1.5-pro
FALLBACK_AGENT_MODEL=gpt-3.5-turbo
MAX_CONVERSATION_HISTORY=50
AGENT_TIMEOUT_SECONDS=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security Settings
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
API_RATE_LIMIT=100
SESSION_TIMEOUT_MINUTES=30

# Business Rules
REFUND_WINDOW_DAYS=30
REFUND_PROCESSING_FEE=2.99
MAX_REFUND_AMOUNT=10000.00

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
API_BASE_URL=http://localhost:8080

# Development Settings (Only for development)
ENABLE_DEBUG_ROUTES=false
MOCK_EXTERNAL_APIS=false
SKIP_AUTH=true 